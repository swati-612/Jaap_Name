<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lamp1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/lamp"
            android:layout_weight="0.10"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:layout_margin="10dp"
            android:text="ऋषी परंपरा भारतीय संस्कृती नाम जाप"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack">
        </TextView>
        <ImageView
            android:id="@+id/lamp2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/lamp"
            android:layout_weight="0.10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/nameraam"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <com.example.naamjaap.utils.NJButton
            android:id="@+id/btn_jaap"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="जाप "
            android:padding="5dp"
            android:textSize="15sp"
            android:background="@drawable/button_bg"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <com.example.naamjaap.utils.NJButton
            android:id="@+id/btn_today_japkarta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="आज के सर्वाधिक जापकर्ता  "
            android:padding="5dp"
            android:layout_margin="7dp"
            android:textSize="15sp"
            android:background="@drawable/button_bg"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <com.example.naamjaap.utils.NJButton
            android:id="@+id/btn_most_japkarta"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="अब तक के सर्वाधिक जापकर्ता "
            android:padding="5dp"
            android:textSize="15sp"
            android:background="@drawable/button_bg"
            android:layout_margin="7dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
        <com.example.naamjaap.utils.NJButton
            android:id="@+id/btn_sandesh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="संदेश "
            android:padding="5dp"
            android:layout_margin="7dp"
            android:textSize="15sp"
            android:background="@drawable/button_bg"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>



</LinearLayout>